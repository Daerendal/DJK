@using DJK.ViewModels
@model ObservedSellerVM

@{
    ViewData["Title"] = "Obserwowani Sprzedawcy";
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="~/css/newProduct.css" asp-append-version="true" />
}




    <div class="container bg-light rounded-3 p-4">
    <h2>Obserwowani Sprzedawcy</h2>
    <div class="col-12 border-bottom">
        <form method="post">
            @if (Model.FavouriteSeller.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <p>E-mail</p>
                        </th>
                        <th>
                            <p>Imię</p>
                        </th>
                        <th>
                            <p>Miejscowość</p>
                        </th>
                        <th>

                        </th>
                    </tr>
                    @foreach(var item2 in Model.FavouriteSeller)       
                         {
                    @foreach (var item in Model.ObservedSeller)
                    {
                        @if (item2.SellerId == item.Id)
                        {
                             <tr>
                            <td>
                                <a href="/UserInfo?user=@item.Id"> @Html.DisplayFor(x => item.Email) </a>   
                            </td>
                            <td>
                                @Html.DisplayFor(x => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(x => item.City)
                            </td>
                            <td>
                                <button asp-area="" asp-controller="ObservedSeller" asp-action="StopObserved" asp-route-Id="@item.Id" onclick="return confirm('Czy na pewno chcesz przestać obserwować sprzedawce?')" class="btn btn-danger btn-sm">Przestań obserwować</button>
                            </td>
                        </tr>    
                            }
                       
                    }
                    }
                </table>
            }
            else
            {
                <p>Nie obserwujesz aktualnie żadnego sprzedawcy.</p>
            }
        </form>
    </div>
</div>





